<wux-search-bar bindtap="changeToSearch">search-bar</wux-search-bar>
<view style="height:8rpx"></view>
<scroll-view class="content-info" scroll-y>

<!-- 显示音乐首页 -->
    <block wx:if="{{IsInfo==1}}">
<include src="music.wxml"></include>
    </block>

<!-- 显示播放器 -->
  <block wx:if="{{IsPlay==1}}">
<include src="play.wxml"></include>
    </block>

<!--footer player-->
<!--播放条-->
<view class="player">
    <!-- 点击图片进入play.wxml/音乐播放界面 -->
  <image class="player-music-image" src="{{play.coverUrl}}" bindtap="changeToPlay"></image>
    <!--音乐信息-->
    <view class="player-music-information">
        <view class="player-music-information-title">{{play.title}}</view>
        <view class="player-music-information-singer">{{play.singer}}</view>
    </view>
   <!--切换到播放列表-->
    <view class="player-controls">

<!--      *******列表项页面暂不扩充*******
        <image src="../../images/01.png" bindtap="" ></image> -->
        <!--点击播放/暂停按钮，播放/暂停-->
        <image wx:if="{{state=='paused'}}" src="../../images/02.png" bindtap="play"></image>
        <image wx:else src="../../images/02stop.png" bindtap="pause"></image>
        <!--下一首-->
        <image src="../../images/03.png" bindtap="next"></image>
    </view>
</view>
</scroll-view>