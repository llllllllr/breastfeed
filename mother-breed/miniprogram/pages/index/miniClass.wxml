  <view>
    <!-- 轮播图 -->
    <!-- 图片绑定函数，点击进入详细图文页 -->
    <swiper indicator-dots autoplay loop class="itSwiperImage">
      <swiper-item>
        <image data-item='0' bindtap="play_class" src="../../images/DB40734F5A3FA90D909EBE80053C16CF.jpg" ></image>
      </swiper-item>
