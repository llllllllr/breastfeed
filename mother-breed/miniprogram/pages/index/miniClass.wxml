      </swiper-item>
    </swiper>
  </view>
  <view class="block"></view>
  <view class="today_class">
    <view class="block"></view>
    
    <block wx:for="{{videoList}}" wx:for-item="item">
    <view class="miniclass-outer-box" data-item="{{item.id}}" bindtap="play_class">
      <view class="miniclass-wrap-box">
        <view class="miniclass-inner-box-image">
          <image class="miniclass-image" id="#" src="{{item.coverUrl}}" alt="课程图片" />
        </view>
        <view class="miniclass-inner-box-tit">
          <span class="miniclass-inner-box-tit_name">{{item.title}}</span>
        </view>
      </view>
    </view>
