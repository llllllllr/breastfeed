@import "../styles/base/fn.wxss";

.@{wuxClassNamePrefix}-backdrop {
    background: rgba(0, 0, 0, .4);
    
    &, 
    &--transparent {
        position: fixed;
        z-index: 1000;
        top: 0;
        right: 0;
        left: 0;
        bottom: 0;
    }

    &--transparent {
        background: transparent;
    }
}