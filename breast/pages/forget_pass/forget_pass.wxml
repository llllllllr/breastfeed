<view class="bor">
	<form class="padding mar" bindsubmit="formSubmit">
		<view class="cu-form-group">
			<view class="title">证件</view>
			<input name="cardNum" placeholder="请输入证件号码"></input>
			<text class="cuIcon-profile lg text-gray"></text>
		</view>
		<view class="cu-form-group">
			<view class="title">密码</view>
			<input type="password" name="password" placeholder="请输入新密码"></input>
			<text  class="cuIcon-lock lg text-gray"></text>
		</view>
		<view class="cu-form-group">
			<view class="title">重复密码</view>
			<input type="password" name="repassword" placeholder="请再次输入新密码"></input>
			<text  class="cuIcon-lock lg text-gray"></text>
		</view>
		<view class="btn">
			<button formType="submit" class="cu-btn round bg-pink shd" style="height:100rpx">重置密码</button>
		</view>
	</form>
</view>
